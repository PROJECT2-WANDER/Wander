<h1>Edit this place</h1>
<div>{{place.name}}</div>
{{#with place}}
<form action="/favoritesPlaces/{{_id}}/edit" method="POST">
  <label for="description">description: </label>
  <input type="description" name="description" id="description" value="{{description}}">
  <label for="tag">Tag:</label>
  <input type="tag" name="tag" id="tag" value="{{tag}}">
  <label for="rating">Rating: </label>
  <input type="number" name="rating" id="rating" value="{{rating}}">

  <button type="submit">Update the place</button>
</form>
{{/with}}

<button type="submit">Delete</button>